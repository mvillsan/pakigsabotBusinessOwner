<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/browser_actions_bg_grey"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Reservation Details"
        android:textColor="@color/darkgreen"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/reserveDateTV"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:drawableStart="@drawable/ic_reserve"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:text="Date: "
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/customerName"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Name: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/reservedNameTV"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Reserved: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_reservations"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/adultPaxET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Adults: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="number"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/petPaxET"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="No. of Pets: "
        android:textSize="12sp"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/feeTV"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Reservation Fee: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_fee"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/dateTransacTV"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:paddingTop="5dp"
        android:text="Transaction Date: "
        android:textSize="12sp"
        android:drawableStart="@drawable/ic_reserve"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins_light"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/closeRHistoryBtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/darkbluegreen"
        android:fontFamily="@font/poppins_medium"
        android:text="CLOSE"
        android:textColor="@color/purple"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
