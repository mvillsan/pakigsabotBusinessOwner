<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:padding="1dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/dentEyeEstRVImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_imageicon"
            app:riv_border_color="@color/white"
            app:riv_border_width="2dip"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true" />

        <TextView
            android:id="@+id/dentEyeEstRVName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/dentEyeEstRVImg"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dentEyeEstRVAddress"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dentEyeEstRVName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dentEyeEstRVImg"
            android:text="Address"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="italic" />

        <RatingBar
            android:id="@+id/dentEyeEstRVRating"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/dentEyesEstRVReviews"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/dentEyeEstRVImg"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/dentEyesEstRVReviews"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dentEyeEstRVAddress"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dentEyeEstRVImg"
            android:text="Reviews"
            android:textColor="@color/gray"
            android:textSize="10sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/selectBtn"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/dentEyeEstRVAddress"
            android:layout_toRightOf="@id/dentEyeEstRVName"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="Select"
            android:textSize="12sp"
            android:textColor="@color/green" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>