<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="7dp">

        <ImageView
            android:id="@+id/dentEyeRVProcImg"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_imageicon"
            app:civ_border_color="@color/purple"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/dentEyeRVName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dentEyeRVProcImg"
            android:fontFamily="@font/poppins_medium"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dentEyeRVDesc"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dentEyeRVName"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dentEyeRVProcImg"
            android:fontFamily="@font/poppins_light"
            android:text="Description"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/dentEyeRateLbl"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_below="@+id/dentEyeRVDesc"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/dentEyeRVProcImg"
            android:fontFamily="@font/poppins_light"
            android:text="Rate: Php "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/dentEyeRVRate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dentEyeRVDesc"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/dentEyeRateLbl"
            android:fontFamily="@font/poppins_light"
            android:text="Rate"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <Button
            android:id="@+id/selectProcRVBtn"
            android:layout_width="54dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="31dp"
            android:layout_toEndOf="@+id/dentEyeRVDesc"
            android:layout_toRightOf="@id/dentEyeRVDesc"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text="SELECT"
            android:textColor="@color/lemongreen"
            android:textSize="10sp"
            android:visibility="visible" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>