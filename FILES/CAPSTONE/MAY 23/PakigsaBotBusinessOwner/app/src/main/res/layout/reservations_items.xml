<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="1dp"
    app:cardCornerRadius="10dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="95dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/reserveIcon"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_reservations"
            app:civ_border_color="@color/purple"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/reserveDateTV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:background="@color/darkgreen"
            android:fontFamily="@font/poppins_medium"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reserveTimeTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reserveDateTV"
            android:layout_marginStart="-60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/reserveDateTV"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_light"
            android:text="Reserve Time"
            android:textColor="@color/black"
            android:textSize="9sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeCheckInTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_toEndOf="@+id/reserveDateTV"
            android:layout_toRightOf="@id/reserveDateTV"
            android:fontFamily="@font/poppins_light"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reserveStatusTV"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeCheckInTV"
            android:layout_marginStart="51dp"
            android:layout_marginLeft="121dp"
            android:layout_marginTop="-18dp"
            android:layout_toEndOf="@+id/reserveDateTV"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_medium"
            android:text="status"
            android:textColor="@color/darkgreen"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/custNameTV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reserveTimeTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_light"
            android:text="Cust Name"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/reservedNameTV"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/custNameTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_light"
            android:text="Reserved Name"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/paxLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reservedNameTV"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/reserveIcon"
            android:fontFamily="@font/poppins_light"
            android:text="Reserved for:"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/paxTV"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reservedNameTV"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/paxLbl"
            android:fontFamily="@font/poppins_light"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/reserveInfoBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="201dp"
            android:layout_toEndOf="@+id/reserveStatusTV"
            android:layout_toRightOf="@id/reserveIcon"
            app:srcCompat="@drawable/ic_info" />

        <ImageView
            android:id="@+id/sendEmailToCustBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/reserveInfoBtn"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="202dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/custNameTV"
            android:layout_toRightOf="@id/reserveIcon"
            app:srcCompat="@drawable/gmail_icon" />

        <TextView
            android:id="@+id/markAsCompleteTV"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reserveStatusTV"
            android:layout_marginStart="116dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/reserveIcon"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"
            android:drawablePadding="3dp"
            android:fontFamily="@font/poppins_light"
            android:text="Mark as Complete"
            android:textAlignment="center"
            android:textSize="8sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>