<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/dentEyeImgProcedure"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_imageicon"
            app:civ_border_color="@color/purple"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/dentEyeRVName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dentEyeImgProcedure"
            android:fontFamily="@font/poppins_light"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/dentEyeRVDesc"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dentEyeRVName"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dentEyeImgProcedure"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dentEyeRateLbl"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dentEyeRVDesc"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dentEyeImgProcedure"
            android:text="Rate: Php "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dentEyeRVRate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dentEyeRVDesc"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/dentEyeRateLbl"
            android:text="Rate"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/dentEyeUpdateBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/dentEyeRVName"
            app:srcCompat="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/dentEyeDeleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/dentEyeUpdateBtn"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/dentEyeRVName"
            app:srcCompat="@drawable/ic_delete" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>